<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundFloating"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/idForAccountImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:src="@drawable/b"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idForAccountName"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="account name"
                    android:maxLines="1"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/idForAccountStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Account Status"
                    android:gravity="right"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idForAccountMobileNumber"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="01923055489"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/idForAccountBalance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="1234567890"
                    android:maxLines="1"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="15dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/idForAccountAddress"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:text="Here goes to the account address"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

