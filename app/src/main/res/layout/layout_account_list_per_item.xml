<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundFloating"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/ShowAccountListFeatureImageViewForShowingAccountImage"
            android:contentDescription="@string/showAccountListFeatureImageViewDescription"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/b"/>

        <View
            android:layout_margin="5dp"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/listDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ShowAccountListFeatureTextViewForShowingAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:textStyle="normal"
                    android:text="@string/showAccountListFeatureTextViewForShowingAccountName"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/ShowAccountListFeatureTextViewForShowingAccountMobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/showAccountListFeatureTextViewForShowingMobileNumber"
                    android:maxLines="1"
                    android:gravity="top"
                    android:textColor="@color/ashColor"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/ShowAccountListFeatureTextViewForShowingAccountOptions"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/showAccountListFeatureTextViewForShowingMenuSign"
                android:textSize="25sp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textAppearance="?android:textAppearanceLarge" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

