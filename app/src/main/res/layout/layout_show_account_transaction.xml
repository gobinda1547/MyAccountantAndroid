<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myaccountant.gobinda.cse.ju.org.myaccountant10.show_account_list_feature.ShowAccountListActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewForAccountProfile"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/showTransactionAccountImageImageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/b"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/showTransactionAccountBalanceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Taka Show Korbe"
                    android:textSize="25dp"
                    android:gravity="bottom"/>

                <TextView
                    android:id="@+id/showTransactionAccountTypeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Joma Naki Baki Show Korbe"
                    android:textSize="20dp"
                    android:gravity="top"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/idForAccountTransactionList"
        android:layout_width="match_parent"
        android:layout_below="@id/cardViewForAccountProfile"
        android:layout_height="wrap_content" />

</RelativeLayout>

