<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:layout_gravity="center|center_horizontal|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/popUpAccountDetailsImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/b"
                />

            <TextView
                android:id="@+id/popUpAccountDetailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Show Name Here"
                android:gravity="center|bottom"
                />

            <TextView
                android:id="@+id/popUpAccountDetailsMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Mobile Number here"
                android:gravity="center|top"
                />

            <Button
                android:id="@+id/popUpAccountDetailsDismissButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:text="Done"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

</android.support.v7.widget.CardView>
