<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e3e3e3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="myaccountant.gobinda.cse.ju.org.myaccountant10.edit_account_feature.EditAccountActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBackgroundFloating"
            android:orientation="vertical"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/idForShowingAccountImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:contentDescription="@string/showing_user_image"
                android:onClick="changeImage"
                android:layout_margin="2dp"
                android:src="@drawable/a" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/account_name"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/idForShowingAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="15"
                android:hint="@string/enter_name"
                android:textColor="#000"
                android:background="#f0f0f4"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/mobile_number_showing"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/idForShowingAccountMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#f0f0f4"
                android:inputType="number"
                android:maxLength="11"
                android:hint="@string/enter_mobile_number"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/editAccountButtonUpdateInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f4"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:onClick="updateAccountInformation"
                android:padding="10dp"
                android:text="@string/edit_account_update_information"/>


            <Button
                android:id="@+id/editAccountButtonGoBackToHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f4"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:onClick="goBackToHomeActivity"
                android:padding="10dp"
                android:text="@string/go_back_to_home"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
