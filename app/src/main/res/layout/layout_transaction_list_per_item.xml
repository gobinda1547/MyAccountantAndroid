<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ShowTransactionListFeatureTextViewForShowingTransactionDateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="@string/showTransactionFeatureTextViewForShowingTransactionDate"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:id="@+id/ShowTransactionListFeatureTextViewForShowingTransactionStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="@string/showTransactionFeatureTextViewForShowingTransactionStatus"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:id="@+id/ShowTransactionListFeatureTextViewForShowingTransactionAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="@string/showTransactionFeatureTextViewForShowingTransactionAmount"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

</android.support.v7.widget.CardView>

